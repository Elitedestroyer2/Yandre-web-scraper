#:import CollMV gui.gui_componets.modal_views.collection_modal_view.collection_modal_view.CollectionModalView

#:include gui/gui_componets/recycle_view/recycle_view.kv
#:include gui/gui_componets/selectable_recycle_box/selectable_recycle_box_layout.kv 

<CollectionModalView@ModalView>:
    size_hint: 1,1
    auto_dismiss: False
    on_pre_open: root.start_up()
    background: 'gui/Images/back_ground.jpg'

    BoxLayout:
        orientation: 'vertical'
        RV:
            id: collection_list
            size_hint: 1, 1
        BoxLayout:
            size_hint: 1, .05
            orientation: 'horizontal'
            Button: 
                text: 'close'
                on_release: root.dismiss()