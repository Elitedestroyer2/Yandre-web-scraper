#:import CharMV gui.gui_componets.modal_views.character_modal_view.character_modal_view.CharacterModalView

#:include gui/gui_componets/recycle_view/recycle_view.kv
#:include gui/gui_componets/selectable_recycle_box/selectable_recycle_box_layout.kv 

<CharacterModalView@ModalView>:
    size_hint: 1,1
    auto_dismiss: False
    on_pre_open: root.start_up()
    background: 'gui/Images/back_ground.jpg'
    id: charactermv

    BoxLayout:
        orientation: 'vertical'
        RV:
            id: character_list
            size_hint: 1, 1
            viewclass: 'AddedCharacterSelect'
            SelectableRecycleBoxLayout:
            
        BoxLayout:
            size_hint: 1, .05
            orientation: 'horizontal'
            Button: 
                text: 'close'
                on_release: root.dismiss()
            Button:
                text: 'remove'
                on_release: root.remove_character_button()