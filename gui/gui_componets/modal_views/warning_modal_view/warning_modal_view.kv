#:import WarnMV gui.gui_componets.modal_views.warning_modal_view.warning_modal_view.WarningModalView

<WarningModalView@ModalView>:
    size_hint: .5,.5
    auto_dismiss: False
    background_color: Mine_Shaft_Dark_Transparent
    background: 'gui/Images/Mine_shaft_dark.jpg'

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        Label:
            size_hint: .75, .75
            padding_x: 10
            id: warning_label
            bold: 'True'
            canvas.before:
                Color:
                    rgba: Emperor
                Rectangle:
                    pos: self.pos
                    size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size: self.parent.size
        pos: self.parent.pos
        Button:
            text: 'Ok'
            on_release: root.dismiss()