<ToggleButton>:
    size_hint: .1,.1

<Button>:
    size_hint: .2,.2

<Label>:
    size_hint: .4, None

<TextInput>:
    size_hint: .2, None

<Launch>:
    FloatLayout:
        size: root.size
        padding: 10
        spacing: 10
        GridLayout:
            cols:2
            size_hint: .64, .9
            Label:
                text: 'Search:'
                color: 0,1,0,1
                text_size: self.size
                height: 30
                pos_hint: {"x":.33, "top":.94}
                halign: 'right'
                valign: 'center'
                padding_x: 10
                font_size: 20
            TextInput:
                hint_text: 'First Name'
                id: search
                multiline: False
                height: 30
                pos_hint: {"x":.4,"top":.94}
                halign: 'left'