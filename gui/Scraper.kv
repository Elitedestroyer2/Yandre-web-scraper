
#:set Alabaster 247/255, 247/255, 247/255, 1
#:set Mercury 225/255, 225/255, 225/255, 1
#:set Alto 207/255, 207/255, 207/255, 1
#:set Silver_Chalice 177/255, 177/255, 177/255, 1
#:set Silver_Chalice_Dark 158/255, 158/255, 158/255, 1
#:set Gray 126/255, 126/255, 126/255, 1
#:set Dove_Gray 98/255, 98/255, 98/255, 1
#:set Emperor 81/255, 81/255, 81/255, 1
#:set Mine_Shaft 59/255, 59/255, 59/255, 1
#:set Mine_Shaft_Dark 34/255, 34/255, 34/255, 1
#:set Dark_Gray 7/255, 7/255, 7/255, 1
#:set toggle True

<ToggleButton>:
    size_hint: 1, None
    height: 30
    text_size: self.size
    halign: 'center'
    valign: 'center'

<Button>:
    size_hint: 1,None
    height: 30
    valign: 'center'
    padding_y: 10
    background_color: Silver_Chalice_Dark
    background_down: 'atlas://images/myatlas/button-down'

<Label>:
    size_hint: .3, None
    height: 30
    color: Mercury
    text_size: self.size
    halign: 'center'
    valign: 'center'

<TextInput>:
    size_hint: 1, None
    height: 30
    multiline: False
    halign: 'center'
    padding_x: 10
    background_color: Gray
    hint_text_color: Silver_Chalice
    foreground_color: Mercury
    cursor_color: Mine_Shaft
    cursor_width: '2sp'

<Blank>:
    size_hint: .1, None
    text_size: self.size
    halign: 'right'
    valign: 'center'
    padding_x: 10
    font_size: 20
    height: 30

<TabLabel>:
    color: Mercury
    text_size: self.size
    font_size: '16sp'
    padding_x: 5
    valign: 'center'
    canvas.before:
        Color:
            rgba: Dark_Gray
        Rectangle:
            pos: self.pos
            size: self.size

<InputBox>:
    multiline: False
    halign: 'center'
    size_hint_y: None
    height: 30

<CharacterTextInput>:
    hint_text: 'Hatsune_miku'
    multiline: False
    halign: 'center'
    size_hint_y: None
    height: 30
    foreground_color: Mercury
    cursor_color: Mine_Shaft
    cursor_width: '2sp'


<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
<RV>:
    size_hint: .2, None
    viewclass: 'SelectableLabel'
    height: 1
    SelectableRecycleBoxLayout:
        default_size: None, dp(22)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        width: 20
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False

<Launch>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'Images/3.jpg'
        #Move to top somehow
        GridLayout:
            cols:3
            size_hint: .95, .95
            height: self.minimum_height
            padding: 10, 10
            canvas.before:
                Color:
                    rgba: .13,.13,.13,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            canvas:
                Color: 
                    rgba: 0, 0, 0, 1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height
            TabLabel:
                text: 'Search'
            Blank:
            TabLabel:
                text: 'Amount:'
            CharacterTextInput:
                id: search_box
            Blank:
            TextInput:
                hint_text: "100"
                input_filter: 'int'
            RV:
                id: suggestions_dropdown
            Blank:
            Blank:
            TabLabel:
                text: 'Filters:'
            Blank:
            TabLabel:
                text: 'Extras:'
            ToggleButton:
                text: 'Lewd Only'
                group: 'filters'
            Blank:
            ToggleButton:
                text: 'Duplication Check'
            ToggleButton:
                text: 'Wholesome Only'
                group: 'filters'
            Blank:
            Blank:
            Blank:
            Blank:
            Blank:
            TabLabel:
                text: 'Settings'
            Blank:
            TabLabel:
                text: 'Controls'
            Button:
                text: 'Save directory'
            Blank:
            Button:
                text: 'Add character'
            Button:
                text: 'Show added characters'
            Blank:
            Button:
                text: 'Start download'
