
#:import Factory kivy.factory.Factory

#:set Alabaster 247/255, 247/255, 247/255, 1
#:set Mercury 225/255, 225/255, 225/255, 1
#:set Alto 207/255, 207/255, 207/255, 1
#:set Silver_Chalice 177/255, 177/255, 177/255, 1
#:set Silver_Chalice_Dark 158/255, 158/255, 158/255, 1
#:set Gray 126/255, 126/255, 126/255, 1
#:set Dove_Gray 98/255, 98/255, 98/255, 1
#:set Emperor 81/255, 81/255, 81/255, 1
#:set Mine_Shaft 59/255, 59/255, 59/255, 1
#:set Mine_Shaft_Dark 34/255, 34/255, 34/255, 1
#:set Dark_Gray 7/255, 7/255, 7/255, 1
#:set toggle True

<ToggleButton>:
    size_hint: 1, None
    height: 30
    text_size: self.size
    halign: 'center'
    valign: 'center'

<Button>:
    size_hint: 1,None
    height: 35
    valign: 'center'
    padding_y: 10
    background_color: Silver_Chalice_Dark
    background_down: 'atlas://images/myatlas/button-down'

<Label>:
    size_hint: .3, None
    height: 30
    color: Mercury
    text_size: self.size
    halign: 'center'
    valign: 'center'
    font_size: '16sp'

<TextInput>:
    size_hint: 1, None
    height: 30
    multiline: False
    halign: 'center'
    padding_x: 10
    background_color: Gray
    hint_text_color: Silver_Chalice
    foreground_color: Mercury
    cursor_color: Mine_Shaft
    cursor_width: '2sp'
    font_size: '16sp'

<Blank>:
    size_hint: .1, None
    text_size: self.size
    halign: 'right'
    valign: 'center'
    padding_x: 10
    font_size: 20
    height: 30

<TabLabel>:
    color: Mercury
    text_size: self.size
    font_size: '16sp'
    padding_x: 5
    valign: 'center'
    canvas.before:
        Color:
            rgba: Dark_Gray
        Rectangle:
            pos: self.pos
            size: self.size

<InputBox>:
    multiline: False
    halign: 'center'
    size_hint_y: None
    height: 30

<CharacterTextInput>:
    hint_text: 'Hatsune_miku'
    multiline: False
    halign: 'center'
    size_hint_y: None
    height: 30
    foreground_color: Mercury
    cursor_color: Mine_Shaft
    cursor_width: '2sp'


<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, .6, .4, 1) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<SelectableRecycleBoxLayout>:
    size_hint: 1, None
    default_size: None, dp(32)
    default_size_hint: 1, None
    height: self.minimum_height
    orientation: 'vertical'
    multiselect: True
    touch_multiselect: True

<RV>:

<CharacterModalView@ModalView>:
    size_hint: 1,1
    auto_dismiss: False
    on_pre_open: root.get_characters()
    background: 'Images/3.jpg'

    BoxLayout:
        orientation: 'vertical'
        RV:
            id: character_list
            size_hint: 1, 1
            viewclass: 'AddedCharacterSelect'
            SelectableRecycleBoxLayout:
            
        BoxLayout:
            size_hint: 1, .05
            orientation: 'horizontal'
            Button: 
                text: 'close'
                on_release: root.dismiss()
            Button:
                text: 'remove'

<CollectionModalView@ModalView>:
    size_hint: 1,1
    auto_dismiss: False
    on_pre_open: root.get_characters()
    background: 'Images/3.jpg'

    BoxLayout:
        orientation: 'vertical'
        RV:
            id: collection_list
            size_hint: 1, 1
        BoxLayout:
            size_hint: 1, .05
            orientation: 'horizontal'
            Button: 
                text: 'close'
                on_release: root.dismiss()
            Button:
                text: 'remove'

<Launch>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'Images/3.jpg'
        GridLayout:
            cols:3
            size_hint: .8, .85
            height: self.minimum_height
            padding: 10, 10
            canvas.before:
                Color:
                    rgba: .13,.13,.13,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            canvas:
                Color: 
                    rgba: 0, 0, 0, 1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height
            TabLabel:
                text: 'Search'
            Blank:
            TabLabel:
                text: 'Amount'
            CharacterTextInput:
                id: search_box
            Blank:
            TextInput:
                hint_text: "100"
                input_filter: 'int'
                id: amount
            RV:
                id: suggestions_dropdown
                viewclass: 'CharacterSelect'
                SelectableRecycleBoxLayout:
            Blank:
            Blank:
            TabLabel:
                text: 'Filters'
            Blank:
            TabLabel:
                text: 'Extras'
            ToggleButton:
                text: 'Lewd Only'
                group: 'filters'
            Blank:
            ToggleButton:
                text: 'Duplication Check'
            ToggleButton:
                text: 'Wholesome Only'
                group: 'filters'
            Blank:
            Blank:
            Blank:
            Blank:
            Blank:
            TabLabel:
                text: 'Settings'
            Blank:
            TabLabel:
                text: 'Controls'
            SaveDirButton:
                text: 'Save directory'
            Blank:
            Button:
                text: 'Add character'
                on_press: root.add(root.ids.search_box.text, root.ids.amount.text)
            Button:
                text: 'Show added characters'
                on_release: Factory.CharacterModalView().open()
            Blank:
            Button:
                text: 'Start download'
            Button:
                text: 'Show collection'
